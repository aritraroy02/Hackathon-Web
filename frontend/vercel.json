{
  "version": 2,
  "name": "child-health-pwa-frontend",
  "buildCommand": "npm run build:vercel",
  "outputDirectory": "build",
  "installCommand": "npm install --legacy-peer-deps",
  "framework": "create-react-app",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/manifest.json",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "REACT_APP_BACKEND_URL": "https://child-health-backend-747316458447.us-central1.run.app",
    "REACT_APP_API_URL": "https://child-health-backend-747316458447.us-central1.run.app/api",
    "REACT_APP_NAME": "Child Health PWA",
    "REACT_APP_VERSION": "1.0.0",
    "REACT_APP_OFFLINE_MODE": "true",
    "REACT_APP_DEMO_MODE": "true",
    "REACT_APP_PWA_NAME": "Child Health Tracker",
    "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
    "NODE_OPTIONS": "--no-deprecation --max-old-space-size=4096",
    "GENERATE_SOURCEMAP": "false",
    "INLINE_RUNTIME_CHUNK": "false",
    "BUILD_PATH": "build"
  },
  "cleanUrls": true,
  "trailingSlash": false,
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "github": {
    "silent": true
  }
}
